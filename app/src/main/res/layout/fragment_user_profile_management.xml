<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EWalletManagement"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/wallet_header_border"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="20dp"
        android:background="@color/black">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@color/white"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:text="Khaw Zhe Xue"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/profile_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_name"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:text="@string/hello_blank_fragment"
            android:textColor="@color/white"
            android:textSize="40dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/profile_reload_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@color/black"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/profile_reload_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_reload_image"
                    android:layout_centerInParent="true"
                    android:text="Reload"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

</LinearLayout>