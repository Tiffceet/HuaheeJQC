<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BookDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layoutPadding"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bookdetails_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/bookdetails_bookname_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Huahee Khaw Zhe Xue" />

            <TextView
                android:id="@+id/bookdetails_price_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RM 999.00"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bookdetails_placeorder_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place Order" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutPadding"
                android:background="#66000000"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bookdetails_owner_imgbtn"
                    android:layout_width="10dp"
                    android:layout_height="60dp"
                    android:layout_weight="4"
                    android:src="@drawable/ic_launcher_foreground" />

                <TextView
                    android:id="@+id/bookdetails_owner_txt"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/layoutPadding"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="Khaw Zhe Xue"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/bookdetails_chat_imgbtn"
                    android:layout_width="10dp"
                    android:layout_height="60dp"
                    android:layout_weight="4"
                    android:src="@drawable/ic_launcher_foreground" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layoutPadding"
                android:text="Description"
                android:textSize="16sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/bookdetails_description_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/layoutPadding"
                        android:text="zhexue love his best friends" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </ScrollView>

</layout>