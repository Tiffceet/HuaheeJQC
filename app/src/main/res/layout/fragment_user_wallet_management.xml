<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/wallet_header_border"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#3d3d3d"
        android:padding="20dp">

        <TextView
            android:id="@+id/balance_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="Balance"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/profile_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/balance_title"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_to_reload"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/browser_actions_bg_grey"
            app:cardElevation="10dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/reload_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:src="@color/purple_200" />

                <TextView
                    android:id="@+id/reload_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reload"
                    android:includeFontPadding="false"
                    android:layout_below="@id/reload_image"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/reload_title_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Up"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/reload_title"
                    android:textSize="14sp"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_to_cash_out"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/browser_actions_bg_grey"
            app:cardElevation="10dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/cash_out_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:src="@color/purple_200" />

                <TextView
                    android:id="@+id/cash_out_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cash_out_image"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:text="Cash Out"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cash_out_title_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cash_out_title"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:text="Get Cash Back"
                    android:textSize="14sp" />


            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_to_transfer"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/browser_actions_bg_grey"
            app:cardElevation="10dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/transfer_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@color/purple_200"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/transfer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer"
                    android:includeFontPadding="false"
                    android:layout_below="@id/transfer_image"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/transfer_title_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer Amount"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/transfer_title"
                    android:textSize="14sp"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="Transaction History"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

        //history here
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview_transfer_history"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:text="Show More"
            />
    </RelativeLayout>


</LinearLayout>