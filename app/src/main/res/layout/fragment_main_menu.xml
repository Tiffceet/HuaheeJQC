<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainMenu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/layoutPadding">

        <LinearLayout
            android:id="@+id/searchPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="10dp">

            <ImageButton
                android:id="@+id/menuDrawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/menu_drawer" />

            <View
                android:layout_width="@dimen/layoutPadding"
                android:layout_height="0dp"
                android:layout_weight="0" />

            <TextView
                android:id="@+id/searchInput"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textAllCaps="false"
                android:textSize="20sp"
                tools:text="Search..." />

            <View
                android:layout_width="@dimen/layoutPadding"
                android:layout_height="0dp"
                android:layout_weight="0" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/menu_search" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/showcasePanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/searchPanel"
            tools:layout_editor_absoluteX="1dp">

            <include layout="@layout/component_menu_showcase" />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp" />

            <include layout="@layout/component_menu_showcase" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>